{
  "editor.formatOnSave": false, // pretttier 사용 시에는 formatting 충돌 방지를 위해 false
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true // 저장할 때 eslint의 code action을 실행하는 기능
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode", // 저장할 때 포맷을 prettier 실행
  "editor.autoClosingBrackets": "always",
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.autoClosingBrackets": "always"
  },
  "[vue]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.autoClosingBrackets": "always"
  },
  "eslint.validate": ["javascript", "vue"],
  "vetur.validation.template": false,
  "emmet.includeLanguages": {
    "vue-html": "html",
    "vue": "html"
  }
}
